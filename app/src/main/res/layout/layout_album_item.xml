<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:foreground="@color/black_30"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/album_image"
            android:text="Documents"
            android:textColor="@color/darkGrey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/album_image"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gallery"
            android:tint="@color/darkGrey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gallery_image"
            android:layout_alignTop="@id/gallery_image"
            android:layout_toRightOf="@id/gallery_image"
            android:gravity="center_vertical"
            android:text="15 photos"
            android:textColor="@color/darkGrey"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
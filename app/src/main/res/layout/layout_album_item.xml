<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp">
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:id="@+id/album_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/default_image"
        android:foreground="@color/black_30"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/album_image"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/darkGrey"
        android:textSize="14sp"
        android:text="Documents"/>
    <ImageView
        android:id="@+id/gallery_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="16dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_below="@id/title"
        android:scaleType="centerCrop"
        android:tint="@color/darkGrey"
        android:src="@drawable/ic_gallery"/>
    <TextView
        android:layout_alignTop="@id/gallery_image"
        android:layout_alignBottom="@id/gallery_image"
        android:layout_toRightOf="@id/gallery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/darkGrey"
        android:textSize="12sp"
        android:text="15 photos"/>
</RelativeLayout>
</android.support.v7.widget.CardView>